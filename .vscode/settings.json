{
	"python.analysis.diagnosticMode": "openFilesOnly", // Change to "workspace" to reveal Problems everywhere.
	"python.linting.enabled": true,
	"python.linting.lintOnSave": true,
	"python.linting.mypyEnabled": true,
	"python.linting.mypyArgs": [
		"--strict",
	],
	"python.linting.pylintEnabled": true,
	"python.linting.pylintArgs": [
		"--max-line-length=120",
		"--disable=missing-module-docstring,missing-class-docstring,missing-function-docstring" // TODO do the docstrings
	],
	"python.linting.flake8Enabled": true,
	"python.linting.flake8Args": [
		"--max-line-length=120"
	],
	"python.pythonPath": ".\\venv\\Scripts\\python.exe",
	"cSpell.words": [
		"autopep",
		"cscript",
		"Errno",
		"getarg",
		"gfortran",
		"gnatmake",
		"helloworld",
		"htmlcov",
		"infile",
		"isprime",
		"myfile",
		"nologo",
		"printfn",
		"pypa",
		"rawbranch",
		"rawdir",
		"rawfile",
		"rscript",
		"runcoverage",
		"runmany",
		"runmanys",
		"runpytest",
		"runtox",
		"sbcl",
		"Stmts",
		"terpri",
		"writeln",
		"wslpath"
	],
	"files.exclude": {
		"LICENSE.txt": true,
		".coverage": true,
		"desktop.ini": true,
		".pytest_cache/": true,
		".mypy_cache/": true,
		"**/__pycache__/": true,
		"**/*.egg-info/": true,
		"**/.eggs/": true,
		".tox/": true,
		"htmlcov/": true
	},
}